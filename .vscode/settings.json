{
    "files.exclude": {
        "**/.git": false
    },
    "clangd.path": "clangd-12",
    "mesonbuild.buildFolder": "build",
    "mesonbuild.configureOnOpen": true,
    "clangd.fallbackFlags": [
            "-I/usr/include",
            "-I/usr/include/x86_64-linux-gnu/",
            "-I/usr/include/glib-2.0/"
    ],
    "clangd.arguments": [
            "--clang-tidy",
            "--background-index",
            "-log=verbose"
    ]

}